
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:src="@drawable/mdm"
                android:layout_gravity="center_horizontal"
                android:layout_width="190dp"
                android:layout_height="190dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_login_username"
            android:hint="Username"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="@android:color/darker_gray"
            app:met_baseColor="@color/purple_500"
            app:met_primaryColor="@color/purple_700"
            app:met_iconPadding="0dp"
            android:enabled="false" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_login_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:met_textColorHint="@android:color/darker_gray"
            app:met_baseColor="@color/purple_500"
            app:met_primaryColor="@color/purple_700"
            app:met_iconPadding="0dp"
            android:enabled="false"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <!--
        <TextView
            android:id="@+id/txt_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="CLEAR"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:enabled="false"/>

        -->

        <Button
            android:id="@+id/bt_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginEnd="5dp"
            android:layout_weight="2"
            android:layout_marginTop="4dp"
            android:enabled="false"/>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:enabled="false"/>
    </LinearLayout>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_ipAddress"
            android:hint="ip address"
            android:layout_margin="16dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_textColorHint="@android:color/darker_gray"
            app:met_baseColor="@color/purple_500"
            app:met_primaryColor="@color/purple_700"
            app:met_iconPadding="0dp"/>

    <TextView
        android:id="@+id/deviceid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="deviceId"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/buildNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BuildNo"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/macAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MacAddress"
        android:visibility="gone"/>


    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#431F63"
        android:text="Connect"
        android:textColor="@android:color/white" />
</LinearLayout>